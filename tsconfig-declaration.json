{
    "compilerOptions": {
        "baseUrl": "..",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es6"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "outDir": "dts",
        "removeComments": true,
        "target": "es6",
        "types": [
            "node",
            "jasmine"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "**/*.spec.ts"
    ]
}
